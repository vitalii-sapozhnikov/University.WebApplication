@using University.WebApi.Mapping
@model (List<LecturerDto> lecturers, string departmentName)

<h3>Викладачі</h3>
<hr />
<h3><code>@Model.departmentName</code></h3>
<hr />

<table class="table table-striped">
    <tr>
        <th>
            ПІБ
        </th>
        <th>
            Вчене звання
        </th>
        <th style="width: auto; text-align: end;">
            Дії
        </th>
    </tr>
    @foreach (var lect in Model.lecturers)
    {
        <tr>
            <td>
                @lect.LastName @lect.FirstName @lect.MiddleName
            </td>
            <td>
                @lect.AcademicTitle.GetDisplayName()
            </td>
            <td style="width:min-content; text-align: end;">
                <a class="btn btn-success btn-sm mx-3" asp-controller="Lecturers" asp-action="Index" asp-route-id="@lect.Id">
                    <b>Ефективність</b>
                </a>
                <a class="btn btn-primary btn-sm" asp-controller="Lecturers" asp-action="License" asp-route-id="@lect.Id">
                    <b>Ліцензіювання</b>
                </a>
            </td>
        </tr>
    }
</table>
